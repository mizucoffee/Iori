<header>
  <nav class="uk-navbar-container uk-container" uk-navbar="uk-navbar">
    <div id="search-icon" class="uk-navbar-left">
      <a class="uk-navbar-item white" href="/search">
        <span uk-icon="icon: search;ratio: 1.5"></span>
      </a>
    </div>
    <div id="logo" class="uk-navbar-left">
      <a class="uk-navbar-item uk-logo" href="/">
        <%= render :erb ,:'svg/iori-logo' ,:locals => {:c => "header-iori-logo"}%>
        <%= render :erb ,:'svg/iori-text' ,:locals => {:c => "header-iori-text"}%>
      </a>
    </div>
    <div id="user-icon" class="uk-navbar-right">
      <% if @me %>
      <a class="uk-navbar-item" href="#">
        <img src="<%= @twitter.profile_image_url_https %>" alt="@<%= @twitter.screen_name %>">
      </a>
      <div class="uk-navbar-dropdown" uk-dropdown="mode: click; pos: bottom-right;">
        <ul class="uk-nav uk-navbar-dropdown-nav">
          <li><a href="/@<%= @twitter.screen_name %>"><span uk-icon="icon: user; ratio: 1.3;"></span><span class="menu-text">My Page</span></a></li>
          <li><a href="/account/settings"><span uk-icon="icon: cog; ratio: 1.3;"></span><span class="menu-text">Settings</span></a></li>
          <li class="uk-nav-divider"></li>
          <li><a href="/account/logout"><span uk-icon="icon: sign-out; ratio: 1.3;"></span><span class="menu-text">Logout</span></a></li>
        </ul>
      </div>
      <% else %>
      <a class="uk-navbar-item white" href="/account/login">
        <span uk-icon="icon: user;ratio: 1.5"></span>
      </a>
      <% end %>
    </div>
    <div id="user" class="uk-navbar-right">
      <ul class="uk-navbar-nav">
        <div class="uk-navbar-item" id="search-box">
          <form action="/search">
            <input class="uk-input uk-form-width-medium" name="q" type="text" placeholder="曲名・歌手名・ユーザー名...">
            <button class="uk-button uk-button-default">検索</button>
          </form>
        </div>
        <% if @me %>
        <li>
          <div class="uk-navbar-item">
            <form action="/list">
              <a class="uk-button uk-button-default" href="/review/new">Review</a>
            </form>
          </div>
        </li>
        <li>
          <a href="#"><img src="<%= @twitter.profile_image_url_https %>"
              alt="@<%= @twitter.screen_name %>">&nbsp;<%= @twitter.name %></a>
          <div class="uk-navbar-dropdown">
            <ul class="uk-nav uk-navbar-dropdown-nav">
              <li><a href="/@<%= @twitter.screen_name %>"><span uk-icon="icon: user"></span>&nbsp;My Page</a></li>
              <li><a href="/account/settings"><span uk-icon="icon: cog"></span>&nbsp;Settings</a></li>
              <li class="uk-nav-divider"></li>
              <li><a href="/account/logout"><span uk-icon="icon: sign-out"></span>&nbsp;Logout</a></li>
            </ul>
          </div>
        </li>
        <% else %>
        <li><a href="/account/login"><span uk-icon="icon: user"></span>&nbsp;Login</a></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>