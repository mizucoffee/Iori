<!DOCTYPE html>
<html lang="jp">

<head>
    <%= render :erb ,:'template/head' %>
</head>

<body>
    <%= render :erb ,:'template/header' %>
    <div id="review-header" class="uk-section" style="background: hsl(<%= @review.color[1,100] %>, 100%, <%= @review.color[0,1] == 'l' ? '85%' : '30%' %>,1)">
        <div class="uk-container uk-text-center">
            <h1 class="uk-heading-line"><span><%= @review.music.name %></span></h1>
            <span style="font-size: 18pt;"><%= @review.music.singers.map{|s|s.name}.join(',') %></span>
        </div>
    </div>
    <div id="review-body" class="uk-section">
        <div class="uk-container uk-text-center">
            <h2><%= @review.title %></h2>
            <p><%= @review.body %></p>
            <span><%= @review.created_at %></span>
        </div>
    </div>
    <%= render :erb ,:'template/footer' %>
</body>

</html>